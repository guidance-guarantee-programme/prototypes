<% content_for :proposition do %>
  <%= erb :"partials/proposition" %>
<% end %>

<% content_for :page_title do %>
  Your contact details
<% end %>

<% content_for :body_class do %>
  hide-govuk-footer-links
<% end %>

<div class="inner-block">
  <form action="/contact-details" method="post" class="form">
    <div class="form-group">
      <label class="form-label-bold" for="name">First name</label>
      <input type="text" class="form-control-1-4" id="name" name="name" value="<%= @name %>">
    </div>

    <div class="form-group">
      <label class="form-label-bold" for="surname">Last name</label>
      <input type="text" class="form-control-1-4" id="surname" name="surname" value="<%= @surname %>">
    </div>

    <div class="form-group">
      <label class="form-label-bold" for="full-name">Email</label>
      <p class="form-hint">We'll send you a reminder of your session details.</p>
      <input type="text" class="form-control" id="email" name="email" value="<%= @email %>">
    </div>

    <div class="form-group">
      <label class="form-label-bold" for="full-name">Phone</label>
      <p class="form-hint">This is the phone number we'll call you on.</p>
      <input type="text" class="form-control-1-4" id="phone" name="phone" value="<%= @phone %>">
    </div>

    <div class="form-group">
      <input type="submit" class="button" value="Continue">
    </div>
  </form>
</div>
